#include <iostream>

using namespace std;

int main()

{


cout << "List of numbers is 1, 4, 5, 10, 12, 13, 45, 60, 23, 56, 76, 19, 54, 21, 37, 88, 92, 102, 100, 99"<< endl;

     cout << "What number do you want to find? ";

     int element, location;

     cin >> element;


     int ar[20] = {1, 4, 5, 10, 12, 13, 45, 60, 23, 56, 76, 19, 54, 21, 37, 88, 92, 102, 100, 99};

     

     for(int i = 0; i < 20 ; i++){

         if (ar[i] == element){

             location = i;

             break;

         }

     }cout << "You entered "<< element << endl;

     cout << "Location found is " << location;

     }
